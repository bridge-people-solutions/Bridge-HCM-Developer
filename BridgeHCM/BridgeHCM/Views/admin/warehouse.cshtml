
@{
    ViewData["Title"] = "Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <form class="col-xs-12 col-sm-12 col-lg-12 col-md-12" method="post" asp-action="warehouse" asp-antiforgery="true" id="frm_warehouse">
        <div class="row" ng-app="myApp" ng-controller="myCtrl">
            <div class="col-xs-4 col-sm-4 col-lg-4 col-md-4">
                <div class="card">
                    <div class="card-block">
                        <div class="form-group form-group-sm ">
                            <div class="col-md-12 text-center">
                                <a href="#" class="profile-image">
                                    <img class="user-img img-radius img-preview" src="~/images/default-logo.png" ng-src="{{image_source}}" alt="user-img">
                                </a>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <input type="file" ng-model="filename" id="trigger" ngf-max-size='10' class="form-control" onchange="angular.element(this).scope().setFile(this)" ng-files="getTheFiles($files)" accept="image/*">
                        </div>
                        @*<button class="btn btn-out-dashed waves-effect waves-light btn-inverse btn-square pull-right" type="button" ng-click="submit();">Save Changes</button>*@
                        @Html.Raw(ViewBag.BotMenu)
                    </div>
                </div>
            </div>
            <div class="col-xs-8 col-sm-8 col-lg-8 col-md-8">
                <div class="card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-md-11">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Name</label>
                                    <input type="text" ng-model="name" class="form-control" ng-class="isName"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Active</label>
                                    <div class="onoffswitch">
                                        <input type="checkbox" name="onoffswitch" ng-model="swtActive" class="onoffswitch-checkbox" id="swt-active">
                                        <label class="onoffswitch-label" for="swt-active">
                                            <span class="onoffswitch-inner"></span>
                                            <span class="onoffswitch-switch"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Description</label>
                                    <input type="text" ng-model="description" class="form-control" ng-class="isDescription" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Tin #</label>
                                    <input type="text" ng-model="tin" class="form-control" ng-class="isTin" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Phone #</label>
                                    <input type="text" ng-model="phone" class="form-control" ng-class="isPhone" />
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Fax #</label>
                                    <input type="text" ng-model="fax" class="form-control" ng-class="isFax" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Email</label>
                                    <input type="text" ng-model="email" class="form-control" ng-class="isEmail" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form-group-sm">
                                    <label class="control-label">Address</label>
                                    <input type="text" ng-model="address" class="form-control" ng-class="isAddress" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/scripts/admin/warehouse.js"></script>
    <script src="~/scripts/services.js"></script>
}