
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <form class="col-xs-12 col-sm-12 col-lg-12 col-md-12" method="post" asp-antiforgery="true">
        <div class="row" ng-app="myApp" ng-controller="myCtrl">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">
                <div class="form-group form-group-sm">
                    <div class="input-group">
                        <input class="form-control" type="text" ng-change="loadSearch()" ng-model="search">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-sm waves-effect waves-light btn-primary" ><i class="fa fa-search"></i></button>
                        </div>
                        <div class="input-group-append">
                            <button type="button" class="btn btn-sm waves-effect waves-light btn-primary" ng-click="tab()"><i class="fa fa-reorder"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="list-employee col-md-12" ng-class="list">
                <div class="card">
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <table style="width:100%;" class="table table-striped table-hover table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Occupation</th>
                                        <th>Department</th>
                                        <th>Date Hired</th>
                                        <th>Payroll Type</th>
                                        <th>Confidentiality</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody> </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Occupation</th>
                                        <th>Department</th>
                                        <th>Date Hired</th>
                                        <th>Payroll Type</th>
                                        <th>Confidentiality</th>
                                        <th></th>
                                    </tr>
                                    </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="thumb-employee col-md-12" ng-class="thumb">
                <div class="row">
                    <div class="col-md-3" ng-repeat="x in employeeFetch">
                        <div class="card rounded-card user-card">
                            <div class="card-block">
                                <div class="img-hover">
                                    <img class="img-fluid img-radius" src="{{x.image_path}}" alt="round-img">
                                    <div class="img-overlay img-radius">
                                        <span>
                                            <a target="_blank" href="/master/employee_create?b={{x.enc_key}}" class="btn btn-sm btn-primary"><i class="icofont icofont-link-alt"></i></a>
                                        </span>
                                    </div>
                                </div>
                                <div class="user-content">
                                    <h4 class="">{{x.display_name}}</h4>
                                    <p class="m-b-0 text-muted">{{x.occupation}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/scripts/master/employee_list.js"></script>
    <script src="~/scripts/master_service.js"></script>
}